# Variables de entorno para Backend Mesero360

# App
NODE_ENV=production
PORT=3000
JWT_SECRET=your_jwt_secret_here

# Base de datos (RDS o local)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mesero360

# SSL para RDS (opcional)
# Si tu instancia RDS requiere SSL, activa y provee CA.
# DB_SSL=true|false
DB_SSL=false
# Ruta a archivo CA (montado en el contenedor) o contenido base64
# DB_SSL_CA_FILE=/path/to/rds-combined-ca-bundle.pem
# DB_SSL_CA_BASE64=

# AWS S3 para almacenamiento de im√°genes
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET_NAME=mesero360-productos
